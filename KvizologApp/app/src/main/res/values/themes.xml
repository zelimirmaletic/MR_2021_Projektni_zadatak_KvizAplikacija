<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KvizologApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/icons</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/icons</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NoActionBarTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/icons</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/icons</item>
    </style>


    <style name="AnswerButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:width">@dimen/answer_button_width</item>
        <item name="android:textColor">@color/primary</item>
        <item name="borderWidth">2dp</item>
        <item name="android:textSize">@dimen/answer_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="background">@drawable/answer_button_border</item>
        <item name="backgroundTint">@color/icons</item>
    </style>

    <style name="NextQuestionButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="backgroundColor">@color/accent</item>
        <item name="android:width">@dimen/next_question_button_width</item>
        <item name="android:textColor">@color/icons</item>
        <item name="android:textSize">@dimen/answer_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/accent</item>
        <item name="cornerRadius">@dimen/answer_button_corner_radius</item>
    </style>

    <style name="circle_button">
        <item name="backgroundTint">@color/primary</item>
    </style>

    <style name="letter_button">
        <item name="android:textColor">@color/icons</item>
        <item name="backgroundTint">@color/primary_dark</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:layout_margin">@dimen/letter_button_margin</item>
    </style>

    <style name="CustomCheckBoxAnswer">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/check_box_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/check_box_top_margin</item>
    </style>

    <style name="QuestionTitleText">
        <item name="android:textSize">@dimen/capital_city_fragment_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="AnswerMessageText">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/answer_message_text_size</item>
    </style>

    <style name="aditional_info_button" parent="TextAppearance.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/additional_info_button_corner_radius</item>
        <item name="android:width">10dp</item>
    </style>

    <style name="FlagImageStyle">
        <item name="android:layout_height">@dimen/flag_image_height</item>
        <item name="android:layout_width">@dimen/flag_image_width</item>
        <item name="android:layout_marginTop">@dimen/flag_image_top_margin</item>
    </style>

    <style name="HeritageImageStyle">
        <item name="android:layout_height">@dimen/heritage_image_height</item>
        <item name="android:layout_width">@dimen/heritage_image_width</item>
        <item name="android:layout_marginTop">@dimen/flag_image_top_margin</item>
    </style>


    <style name="Theme.KvizologApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.KvizologApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.KvizologApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>