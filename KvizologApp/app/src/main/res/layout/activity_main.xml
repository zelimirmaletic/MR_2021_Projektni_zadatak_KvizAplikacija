<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/ic_home_fragment_background"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/login_card_margin_left"
        android:layout_marginEnd="@dimen/login_card_margin_right"
        android:layout_marginLeft="@dimen/login_card_margin_left"
        android:layout_marginRight="@dimen/login_card_margin_right"
        android:background="@color/login_card_background"
        app:cardCornerRadius="@dimen/login_card_corner_radius"
        app:cardElevation="@dimen/login_card_elevation"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/login_card_padding">

            <TextView
                android:id="@+id/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/login_app_name"
                android:textStyle="bold"
                android:textSize="@dimen/login_app_name_size"
                android:layout_marginBottom="@dimen/login_app_name_bottom_margin"
                android:gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/login_card_welcome_message"
                android:textColor="@color/primary"
                android:textSize="@dimen/login_card_welcome_text"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/login_card_username_message"
                android:textColor="@color/login_card_lighter_text_color"
                android:textSize="@dimen/login_card_label_text"
                android:layout_marginTop="@dimen/login_card_element_topmargin"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tbEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login_card_element_topmargin"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editTextEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/username_hint"
                    android:textColor="@color/login_card_darker_text_color"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/login_card_password_message"
                android:textColor="@color/login_card_lighter_text_color"
                android:textSize="@dimen/login_card_label_text"
                android:layout_marginTop="@dimen/login_card_element_topmargin"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tbPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login_card_element_topmargin"
                app:endIconMode="password_toggle"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editTextPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password_hint"
                    android:inputType="textPassword"
                    android:textColor="@color/login_card_darker_text_color"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/login_card_login_message"
                android:layout_marginTop="@dimen/login_card_element_topmargin"
                android:textStyle="bold"
                android:textSize="@dimen/login_card_label_text"/>

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/login_card_register_message"
                android:layout_marginTop="@dimen/login_card_element_topmargin"
                android:textStyle="bold"
                android:backgroundTint="@color/accent"
                android:textSize="@dimen/login_card_label_text"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>